    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "@vitest/coverage-c8": "^0.31.0",
    "cypress": "^10.9.0",
    "eslint": "^7.12.1",
    "happy-dom": "^9.10.9",
    "jest": "^28.1.2",
